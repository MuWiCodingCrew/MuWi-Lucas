<h2 class="page-header">Registrierung</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" action="/users/register">
   <div class="form-group">
    <label>Name</label>
    <input type="text" style="width:400px" class="form-control" placeholder="Name" name="name">
  </div>
  <div class="form-group">
    <label>Benutzername</label>
    <input type="text" style="width:400px" class="form-control" placeholder="Benutzername" name="username">
  </div>
   <div class="form-group">
    <label>Email</label>
    <input type="email" style="width:400px "class="form-control" placeholder="Email" name="email">
  </div>
  <div class="form-group">
    <label>Passwort</label>
    <input type="password" style="width:400px" class="form-control" placeholder="Passwort" name="password">
  </div>
  <div class="form-group">
    <label>Passwort best√§tigen</label>
    <input type="password" style="width:400px" class="form-control" placeholder="Passwort" name="password2">
  </div>
  <button type="submit" class="btn btn-default">Account erstellen</button>
</form>