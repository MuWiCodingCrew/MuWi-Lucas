<h2 class="page-header">Registrierung</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" action="/users/register">
   <div class="form-group">
    <label>Nachname</label>
    <input type="text" style="width:400px" class="form-control" placeholder="Nachname" name="nachname">
  </div>
  <div class="form-group">
    <label>Vorname</label>
    <input type="text" style="width:400px" class="form-control" placeholder="Vorname" name="vorname">
  </div>
  <div class="form-group">
    <label>HWR-Mail</label>
    <input type="email" style="width:400px" class="form-control" placeholder="HWR-Mailadresse" name="username">
  </div>
  <div class="form-group">
    <label>Sie sind ...</label>
		<fieldset> 
			<input type="radio" id="st" name="radio" value="stud" checked> 
			<label for="st">Student</label>
			<br/>
			<input type="radio" id="pr" name="radio" value="prof"> 
			<label for="pr">Dozent</label>  
		</fieldset> 
  </div>
  <div class="form-group">
    <label>Passwort</label>
    <input type="password" style="width:400px" class="form-control" placeholder="Passwort" name="password">
  </div>
  <div class="form-group">
    <label>Passwort best√§tigen</label>
    <input type="password" style="width:400px" class="form-control" placeholder="Passwort" name="password2">
  </div>
  <button type="submit" class="btn btn-default">Account erstellen</button>
</form>